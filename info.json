    "device_types": {
        "diskfree.disk_usage": {
            "description": "Disk usage", 
            "id": "diskfree.disk_usage", 
            "name": "Disk usage",
            "commands": [],
            "sensors": ["get_total_space", "get_percent_used", "get_free_space", "get_used_space"],
            "parameters": [
                {
                    "key": "device",
                    "xpl": true,
                    "description": "The path to look at.",
                    "type": "string"
                },
                {
                    "key": "interval",
